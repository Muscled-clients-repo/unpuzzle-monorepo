    span(class="paused-at-time")
        |
    span(class="text-gray-900")
        | PuzzleCheck activated


div(class="w-full border border-[#00AFF0] p-[12px] rounded-md card-check hidden")
    div(class="flex flex-row w-full gap-4")
        - var title = "Puzzle check"
        - var description = "Having trouble? Maybe a check could help!"
        - var type = "split-card"
        include ../components/ai-agent-card.pug
    div(class="w-full card-check-progress h-auto mb-4")
        div(class="w-[0%] h-[5px] bg-[#00AFF0] card-check-progress-bar")


    div(class="w-full gap-2 mb-4")
        div(class="flex flex-row w-full gap-2 items-center justify-between")
            p(class="text-sm text-gray-500 card-check-question-number")
                | Question 0 of 0
