extends ../layout/main

block content
    div(class="max-w-[400px] flex flex-col items-center justify-center mx-auto")
        h1(class="mt-4") Make a Payment
        form(id="payment-form", class="w-[100%] mb-2 border border-[#f5f5f5] p-8")
            div(id="card-element", class="w-[100%] mb-2 bg-[#f5f5f5] p-2")
            div(id="expiry-element", class="w-[100%] mb-2 bg-[#f5f5f5] p-2")
            div(id="cvc-element", class="w-[100%] mb-2 bg-[#f5f5f5] p-2")
            div(id="postal-code-element", class="w-[100%] mb-2 bg-[#f5f5f5] p-2")
            button(type="submit", class="btn btn-primary ml-auto bg-[#f5f5f5] p-2") Pay
        div(id="payment-message", class="")

block scripts
    script(src="https://js.stripe.com/v3/")
    script(src=`${ASSET_ORIGIN}/js/core/stripe-getway.js`)
