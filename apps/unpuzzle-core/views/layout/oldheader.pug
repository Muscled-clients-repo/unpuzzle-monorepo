include ../components/media.pug

header
    nav(class="flex justify-between items-center container")
        a(href="/", class="text-gray-800")
            div(class="flex items-center gap-2")
                +media('image', `${ASSET_ORIGIN}/img/logo.png`, 'Logo', 'w-10 h-10')
                h1(class="text-2xl font-bold") Unpuzzle
        div(class="flex items-center gap-4")

            if user && user.image_url
                div(class="w-[42px] h-[42px] relative shrink-0")
                    +media('image', user.image_url, 'Profile Image', 'w-[42px] h-[42px] rounded-full')
                    span(class="absolute top-[-4px] right-[-4px] w-[16px] h-[16px] bg-[#4074F0] rounded-full text-xs text-white flex items-center justify-center") 2

            a(href="/purchase/payment",class="btn btn-primary") Early Adopter $30/mo