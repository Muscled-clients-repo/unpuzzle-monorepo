{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/app/*": ["./app/*"],
      "@/components/*": ["./app/components/*"],
      "@/ui/*": ["./app/components/ui/*"],
      "@/hooks/*": ["./app/hooks/*"],
      "@/context/*": ["./app/context/*"],
      "@/redux/*": ["./app/redux/*"],
      "@/store/*": ["./app/redux/*"],
      "@/services/*": ["./app/services/*"],
      "@/types/*": ["./app/types/*"],
      "@/utils/*": ["./app/utils/*"],
      "@/lib/*": ["./app/lib/*"],
      "@/assets/*": ["./public/assets/*"],
      "@/icons/*": ["./app/assets/icons/*"],
      "@/styles/*": ["./app/assets/*"],
      "@/public/*": ["./public/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
