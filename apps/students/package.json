{
  "name": "unpuzzle-student",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "NODE_ENV=development next dev -p ${PORT:-3000}",
    "build": "next build",
    "build:css": "tailwindcss -i ./input.css -o ./app/tailwind.css && cp ./app/tailwind.css ./public/tailwind.css",
    "build:no-lint": "SKIP_ENV_VALIDATION=1 next build --no-lint",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"app/**/*.{ts,tsx,js,jsx,json,css}\"",
    "format:check": "prettier --check \"app/**/*.{ts,tsx,js,jsx,json,css}\"",
    "typecheck": "tsc --noEmit",
    "analyze": "ANALYZE=true npm run build",
    "optimize:check": "node scripts/optimize-check.js",
    "optimize:types": "tsc --noEmit -p tsconfig.strict.json",
    "optimize:unused": "npx depcheck",
    "optimize:bundle": "npm run analyze",
    "lighthouse": "npx lighthouse http://localhost:3000 --view",
    "perf": "npm run optimize:check",
    "tailwind": "npx @tailwindcss/cli -i ./input.css -o ./public/tailwind.css --watch"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@heroicons/react": "^2.2.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@reduxjs/toolkit": "^2.8.2",
    "@stripe/react-stripe-js": "^3.7.0",
    "@stripe/stripe-js": "^7.4.0",
    "@tailwindcss/cli": "^4.1.11",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/socket.io-client": "^1.4.36",
    "@wavesurfer/react": "^1.0.11",
    "axios": "^1.10.0",
    "chart.js": "^4.4.9",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "get-blob-duration": "^1.2.0",
    "lucide-react": "^0.513.0",
    "next": "15.3.3",
    "next-themes": "^0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-draggable": "^4.4.6",
    "react-icons": "^5.5.0",
    "react-media-recorder": "^1.6.5",
    "react-redux": "^9.2.0",
    "react-toastify": "^11.0.5",
    "socket.io-client": "^4.8.1",
    "tailwindcss": "^4.1.11",
    "uuid": "^11.1.0",
    "video-editing-timeline-react": "^1.0.0",
    "wavesurfer.js": "^7.9.9"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.4",
    "@types/node": "20.19.9",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.21",
    "eslint-config-next": "^15.4.4",
    "eslint-config-prettier": "^10.1.8",
    "glob": "^11.0.3",
    "identity-obj-proxy": "^3.0.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "typescript": "5.8.3"
  }
}
